<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <com.esolz.aicafeapp.Customviews.OpenSansRegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Do you want to logout"
        android:textColor="#3E2611"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/ll_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#3E2611"
            android:gravity="center"
            android:orientation="horizontal">

            <com.esolz.aicafeapp.Customviews.OpenSansSemiboldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO"
                android:textColor="#FFFFFF"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#3E2611"
            android:gravity="center"
            android:orientation="horizontal">

            <com.esolz.aicafeapp.Customviews.OpenSansSemiboldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YES"
                android:textColor="#FFFFFF"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
