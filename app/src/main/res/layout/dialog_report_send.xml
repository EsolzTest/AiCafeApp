<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_cancel"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <com.esolz.aicafeapp.Customviews.OpenSansSemiboldEditText
            android:id="@+id/et_report"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            android:background="@drawable/inputfield"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:scrollbars="none"
            android:textColor="#250F00"
            android:textColorHint="#250F00"
            android:textSize="16sp">
        </com.esolz.aicafeapp.Customviews.OpenSansSemiboldEditText>

        <RelativeLayout
            android:id="@+id/rl_report_send"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#250F00">

            <com.esolz.aicafeapp.Customviews.OpenSansSemiboldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:text="SEND"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ProgressBar
                android:id="@+id/pbar_report"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/cross"
        android:clickable="false"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/linearLayout"/>

</RelativeLayout>
