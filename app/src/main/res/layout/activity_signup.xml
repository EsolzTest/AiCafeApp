<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:weightSum="3"
    tools:context="com.esolz.aicafe.SignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/placeholder"/>

                <ImageView
                    android:id="@+id/img_set"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/img_profile"
                    android:background="@drawable/camera"/>

                <LinearLayout
                    android:id="@+id/ll_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="20dp"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/imageViewcross2"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@drawable/cross"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="10dp">

                <com.esolz.aicafeapp.Customviews.OpenSansSemiboldEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/inputfield"
                    android:ems="10"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="#250F00"
                    android:textColorHint="#250F00"
                    android:textSize="16sp">
                </com.esolz.aicafeapp.Customviews.OpenSansSemiboldEditText>

                <Spinner
                    android:id="@+id/spn_sex"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/inputfield"
                    android:ems="10"
                    android:hint="Sex"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:textColor="#250F00"
                    android:textColorHint="#250F00"
                    android:textSize="16sp">
                </Spinner>

                <com.esolz.aicafeapp.Customviews.OpenSansSemiboldEditText
                    android:id="@+id/et_dob"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/inputfield"
                    android:ems="10"
                    android:hint="DOB"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="#250F00"
                    android:textColorHint="#250F00"
                    android:textSize="16sp">
                </com.esolz.aicafeapp.Customviews.OpenSansSemiboldEditText>

                <com.esolz.aicafeapp.Customviews.OpenSansSemiboldEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/inputfield"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="#250F00"
                    android:textColorHint="#250F00"
                    android:textSize="16sp">
                </com.esolz.aicafeapp.Customviews.OpenSansSemiboldEditText>

                <com.esolz.aicafeapp.Customviews.OpenSansSemiboldEditText
                    android:id="@+id/et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/inputfield"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="#250F00"
                    android:textColorHint="#250F00"
                    android:textSize="16sp">
                </com.esolz.aicafeapp.Customviews.OpenSansSemiboldEditText>

                <com.esolz.aicafeapp.Customviews.OpenSansSemiboldEditText
                    android:id="@+id/et_pass_conform"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/inputfield"
                    android:ems="10"
                    android:hint="Conform Password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="#250F00"
                    android:textColorHint="#250F00"
                    android:textSize="16sp">
                </com.esolz.aicafeapp.Customviews.OpenSansSemiboldEditText>

                <com.esolz.aicafeapp.Customviews.OpenSansSemiboldEditText
                    android:id="@+id/et_about"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/inputfield"
                    android:gravity="left|top"
                    android:hint="Tell me about you"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:scrollbars="none"
                    android:textColor="#250F00"
                    android:textColorHint="#250F00"
                    android:textSize="16sp">
                </com.esolz.aicafeapp.Customviews.OpenSansSemiboldEditText>

                <com.esolz.aicafeapp.Customviews.OpenSansSemiboldEditText
                    android:id="@+id/et_current_business"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/inputfield"
                    android:ems="10"
                    android:hint="Current Business"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="#250F00"
                    android:textColorHint="#250F00"
                    android:textSize="16sp">
                </com.esolz.aicafeapp.Customviews.OpenSansSemiboldEditText>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/btn_signup"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/button_bg"
                        android:gravity="center"
                        android:text="Sign Up"
                        android:textColor="#ffffff"
                        android:textSize="20sp"/>

                    <ProgressBar
                        android:id="@+id/prg_reg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>