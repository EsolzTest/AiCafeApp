<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/mainbg"
              android:orientation="vertical"
              android:paddingTop="10dp"
              android:weightSum="3"
              tools:context="com.esolz.aicafe.SignUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:background="@drawable/no_img"/>

        <ImageView
            android:id="@+id/img_set"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/img_profile"
            android:background="@drawable/camera"/>

        <LinearLayout
            android:id="@+id/ll_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:padding="15dp">

            <ImageView
                android:id="@+id/imageViewcross2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/cross"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="12dp">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/inputfield"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#250F00"
            android:textColorHint="#250F00"
            android:textSize="16sp">
        </EditText>

        <EditText
            android:id="@+id/et_sex"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/inputfield"
            android:ems="10"
            android:hint="Sex"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#250F00"
            android:textColorHint="#250F00"
            android:textSize="16sp">
        </EditText>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/inputfield"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#250F00"
            android:textColorHint="#250F00"
            android:textSize="16sp">
        </EditText>

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/inputfield"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#250F00"
            android:textColorHint="#250F00"
            android:textSize="16sp">
        </EditText>

        <EditText
            android:id="@+id/et_pass_conform"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/inputfield"
            android:ems="10"
            android:hint="Conform Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#250F00"
            android:textColorHint="#250F00"
            android:textSize="16sp">
        </EditText>

        <EditText
            android:id="@+id/et_about"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/inputfield"
            android:ems="10"
            android:gravity="top"
            android:hint="Tell me about you"
            android:inputType="textImeMultiLine"
            android:maxLines="3"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="#250F00"
            android:textColorHint="#250F00"
            android:textSize="16sp">
        </EditText>

        <EditText
            android:id="@+id/et_current_business"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/inputfield"
            android:ems="10"
            android:hint="Current Business"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#250F00"
            android:textColorHint="#250F00"
            android:textSize="16sp">
        </EditText>

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="#ffffff"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>