<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/rl_sender_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_sender_chat_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/img_sender"
            android:background="@drawable/chat_sender"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <com.esolz.aicafeapp.Customviews.OpenSansRegularTextView
                    android:id="@+id/txt_sender_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Text"
                    android:textColor="#CCA266"
                    android:textSize="18sp"/>

                <com.esolz.aicafeapp.Customviews.OpenSansRegularTextView
                    android:id="@+id/txt_send_time"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Text"
                    android:textColor="#CCA266"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <com.esolz.aicafeapp.Customviews.OpenSansRegularTextView
                android:id="@+id/txt_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="left|center_vertical"
                android:text="Text"
                android:textColor="#000000"
                android:textSize="20sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_sender"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/placeholder"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sender_stiker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_sender_sticker"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/placeholder"/>

        <ImageView
            android:id="@+id/img_sticker_send"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/img_sender_sticker"
            android:background="@drawable/aifive"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_receiver_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_receiver_chat_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/img_receiver"
            android:background="@drawable/chat_rece"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <com.esolz.aicafeapp.Customviews.OpenSansRegularTextView
                    android:id="@+id/txt_receiver_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Text"
                    android:textColor="#CCA266"
                    android:textSize="18sp"/>

                <com.esolz.aicafeapp.Customviews.OpenSansRegularTextView
                    android:id="@+id/txt_receive_time"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Text"
                    android:textColor="#CCA266"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <com.esolz.aicafeapp.Customviews.OpenSansRegularTextView
                android:id="@+id/txt_receive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="left|center_vertical"
                android:text="Text"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_receiver"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/placeholder"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_receiver_stiker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_receiver_stiker"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/img_sticker_receive"
            android:background="@drawable/aieight"/>

        <ImageView
            android:id="@+id/img_sticker_receive"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/placeholder"/>
    </RelativeLayout>

</LinearLayout>
